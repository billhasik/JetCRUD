
@{
    ViewBag.Title = "View Jets";
}
    <div ng-app="JetApp" ng-controller="JetController">
        <div ng-hide="updatingJet">
            <h2>View Current Jets</h2>

            <input type="text" placeholder="Search" ng-model="searchJets" />
            <table class="table table-bordered table-hover table-striped">
                <tr>
                    <th>Serial Number</th>
                    <th>Date / Time of Creation</th>
                    <th>Model Name</th>

                </tr>
                <tr ng-repeat="r in jets | filter:searchJets" ng-click="takeJetToUpdate(r)">
                    <td>#{{r.serialNumber}}</td>
                    <td>{{r.createTime}}</td>
                    <td>{{r.modelName}}</td>

                </tr>
            </table>
        </div>
        <div ng-show="updatingJet">
            <h5>Press 'Update' to save changes.</h5>
            <h5>Press 'Delete' to delete the jet.</h5>
            <h5>Press 'Cancel' to return to the list of jets.</h5>

            <div class="header">
                <button type="button" ng-click="updateJet(jetToBeUpdated)" class="btn btn-success" ng-disabled="isUpdateButtonDisabled">
                    <span class="glyphicon glyphicon-edit"></span>Update
                </button>
                <button type="button" ng-click="deleteJet()" class="btn btn-danger">
                    <span class="glyphicon glyphicon-edit"></span>Delete
                </button>
                <button type="button" ng-click="returnToJetList()"
                        class="btn btn-warning">
                    <span class="glyphicon"></span>Cancel
                </button>
            </div>

            <br>
            <table class="table table-bordered small-table">
                <tr>
                    <td>
                        <label for="key">Id:</label>
                        <span id="key" ng-bind="jetToBeUpdated.id"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="modelName">Model Name:</label><br>
                        <input id="modelName" type="text" ng-model="jetToBeUpdated.modelName" size=40 />
                    </td>
                </tr>
                <tr>
                    <td>
                        <label for="serialNumber">Serial Number:</label><br>
                        <input id="serialNumber" type="number" ng-model="jetToBeUpdated.serialNumber" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <p> <span class="text-warning" ng-bind="updateStatus"></span></p>
                    </td>
                </tr>
            </table>
        </div>
    </div>